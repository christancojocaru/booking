{%  extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/accommodation.css') }}" rel="stylesheet" type="text/css" >
{% endblock %}

{% block body %}
    <section>
        <div class="text search">
            <h2>Găsiți oferte pentru cazare</h2>
            <p>De la case la țară la apartamente moderne</p>
        </div>
        <div class="search-image">
            <img src="{{ asset('img/beach2.jpg') }}">
        </div>
        {{ form_start(form) }}
        <div class="hint location">
            {{ form_widget(form.location) }}
            <datalist id="hint" class="hint-response"></datalist>
        </div>
        <div class="date">
            {{ form_widget(form.startDate) }}
            {{ form_widget(form.endDate) }}
        </div>
        {{ form_widget(form.number) }}
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}

        {% for number, city in cities %}
            <div class="hotel hotel-{{ number }}">
                <div class="name">{{ city.name }}</div>

                <img src="{{ asset('/img/cities/' ~ city.image) }}" alt="{{ city.name }}" data-content="">
                <div class="average">Pret mediu de {{ city.averagePrice }} lei/noapte</div>
            </div>
        {% endfor %}
    </section>
{% endblock %}