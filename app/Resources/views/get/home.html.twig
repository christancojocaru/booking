{%  extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet" type="text/css" >
{% endblock %}

{% block body %}
    <section>
        <div class="text search">
            <h2>Găsiți oferte pentru cazare</h2>
            <p>De la case la țară la apartamente moderne</p>
        </div>
        {{ form_start(form, {"action" : path('accommodation_post')}) }}
        <div class="hint location">
            {{ form_widget(form.location) }}
            <datalist class="hint-response"></datalist>
        </div>
        <div class="date">
            {{ form_widget(form.startDate) }}
            {{ form_widget(form.endDate) }}
        </div>
        {{ form_widget(form.number) }}
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}

        <h4 class="from first-offer">Zboara din timisoara</h4>
        <h4 class="to first-offer">Zboara catre bucuresti</h4>
        <span class="price first-offer">210 lei</span>
        <input class="action first-offer button" type="button" value="Vezi oferta">
        <h4 class="from last-offer">Zboara din timisoara</h4>
        <h4 class="to last-offer">Zboara catre bucuresti</h4>
        <span class="price last-offer">210 lei</span>
        <input class="action last-offer button" type="button" value="Vezi oferta">

        {% for number, city in cities %}
            <div class="hotel hotel-{{ number }}">
                <div class="name">{{ city.name }}</div>

                <img src="{{ asset("img/cities/" ~ city.image) }}" alt="{{ city.name }}" data-content="">
                <div class="average">Cazare la doar {{ city.averagePrice }} lei / noapte</div>
            </div>
        {% endfor %}
        <div class="rent">
            <img src="{{ asset("img/rent.jpg") }}" alt="Rent">
        </div>
    </section>
{% endblock %}