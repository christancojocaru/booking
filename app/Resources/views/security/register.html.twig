{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('css/select2.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/select2-bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="{{ asset('css/login.min.css') }}" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
{% endblock %}

{% block container %}
    <body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="{{ asset('img/logo-big.png') }}" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN REGISTRATION FORM -->
        <h3 class="font-green">Sign Up</h3>
        <p class="hint"> Enter your account details below: </p>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username, 'Username', {'label_attr' : {'class' : 'control-label visible-ie8 visible-ie9'}}) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'Password', {'label_attr' : {'class' : 'control-label visible-ie8 visible-ie9'}}) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr' : {'autocomplete' : 'off', 'class' : 'form-control placeholder-no-fix', 'placeholder' : 'Password'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Repeat Password', {'label_attr' : {'class' : 'control-label visible-ie8 visible-ie9'}}) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr' : {'autocomplete' : 'off', 'class' : 'form-control placeholder-no-fix', 'placeholder' : 'Password'}}) }}
        </div>
        <div class="form-actions">
            <a href="{{ path('security_login') }}" type="button" class="btn green btn-outline">Back</a>
            {{ form_widget(form.submit, {'attr' : {'class' : 'btn btn-success uppercase pull-right', 'formnovalidate' : ''}}) }}
        </div>
        {{ form_end(form) }}
        <!-- END REGISTRATION FORM -->
    </div>
    <div class="copyright"> 2019 Â© Metronic. Cristian Cojocaru </div>
    {% block javascripts %}
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="{{ asset('js/jquery.validate.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/additional-methods.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/select2.full.min.js') }}" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
    {% endblock %}
    </body>
{% endblock %}